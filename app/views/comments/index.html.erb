<h1><%= @article.title %></h1>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= link_to "Back to article", article_path(@article) %>

<h1>Comments</h1>

<% @article.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
    <ul>
      <li><%= link_to "Edit", edit_article_comment_path(@article, comment) %></li>
      <li><%= link_to "Delete", [comment.article, comment], data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %></li>
    </ul>
  </p>
<% end %>



