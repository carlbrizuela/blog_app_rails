<%= form_with model: [ @article, @comment ] do |form| %>
  <div class="flex flex-col justify-center w-full mx-auto">
    <div class="flex flex-row justify-end mr-25">
      <%= form.label :commenter %>
      <%= form.text_field :commenter, class:"ml-2 border-1 rounded w-[450px] p-1 px-2"%>
    </div>
    
    <% @comment.errors.full_messages_for(:commenter).each do |message| %>
      <div class="text-red-700 font-medium text-sm mx-auto"><%= message %></div>
    <% end %>
    
    <div class="flex flex-row mt-8 justify-end mr-25">
      <%= form.label :body %>
      <%= form.text_area :body,rows: 4, class: "ml-2 border-1 rounded w-[450px] p-2" %>
    </div>
    
    <% @comment.errors.full_messages_for(:body).each do |message| %>
      <div class="text-red-700 font-medium text-sm mx-auto"><%= message %></div>
    <% end %>
  </div>

  <button class = "w-full mt-4 text-green-700 hover:text-white border border-green-700 hover:bg-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
    <%= form.submit %>
  </button>
  
<% end %>